@model HomeModel
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap">
<style>
    body {
        margin: 0;
        padding: 0;
    }

    .black-box {
        background-color: black;
        color: white; /* Set text color to contrast with the black background */
        padding: 20px; /* Adjust padding as needed */
        font-family:'Press Start 2P'
    }

        .black-box button, .black-box select {
            background-color: black;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            margin-right: 10px; /* Optional: Add spacing between buttons */
        }

        /* Style for the dropdown */
        .black-box select {
            appearance: none; /* Remove default appearance */

            background-color: black;
            color: white;
            border-radius: 0; /* Remove border-radius for square corners */
            padding: 8px; /* Adjust padding as needed */
            cursor: pointer;
        }
</style>
<body>
    <div class="black-box" >
        &lt;Directory&gt;
        <button>Show Git</button>
        <button>Show About Me</button>
        <select id="coolThingsDropdown">
            <option value="">Show Cool Things</option>
            <option value="/rpg/">Option 1</option>
            <option value="/AnotherPage/">Option 2</option>
            <!-- Add more options as needed -->
        </select>
    </div>

    <script type="text/javascript">
        document.getElementById('coolThingsDropdown').addEventListener('change', function () {
            var selectedValue = this.value;
            if (selectedValue) {
                window.location.href = selectedValue;
            }
        });
    </script>

</body>



